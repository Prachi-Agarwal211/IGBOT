# Reddit API
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=ig-meme-farm/0.1 by YOUR_REDDIT_USERNAME

# Gemini API
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Instagram auth (choose one)
# Option A: Graph API (requires FB app + permissions)
IG_PAGE_ACCESS_TOKEN=
IG_BUSINESS_ACCOUNT_ID=
# Option B: instagrapi (username/password; unofficial, higher risk). If set, Graph API keys are not used.
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=
# Optional: where to store instagrapi session to avoid frequent logins
INSTAGRAM_SESSION_FILE=.instagrapi_session.json

# Twitter API v2 (bearer token for read-only search)
TWITTER_BEARER_TOKEN=AAAAAAAAAAAAAAAAAAAAAPtY3gEAAAAAdN5tGNwzRfRN80BLscGa%2B5kRRtI%3DAtbnwBrY5yyC23oz2a4JctW1McqjscNq9l9hpnPRBSkgmj473a

# Tesseract OCR
# On Windows, set this to the full path of tesseract.exe, e.g.
# TESSERACT_CMD=C:\\Program Files\\Tesseract-OCR\\tesseract.exe
TESSERACT_CMD=

# Cloud OCR (optional)
# Set OCR_PROVIDER to "ocrspace" to use OCR.Space instead of local Tesseract.
# Obtain a free API key at https://ocr.space/ocrapi
# OCR_PROVIDER=ocrspace
# OCRSPACE_API_KEY=your_api_key_here

# Optional tuning
DEFAULT_SUBREDDITS=r/IndianDankMemes,r/DesiMemes
POSTS_PER_DAY=3

# S3-compatible storage (for hosting processed reels/carousels)
# Works with AWS S3, Cloudflare R2, MinIO, etc.
S3_ENDPOINT_URL=
S3_REGION=auto
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=
# Optional public base URL for served assets (recommend using a CDN or custom domain)
# Example for R2 with a custom domain: https://cdn.example.com
S3_PUBLIC_BASE_URL=
